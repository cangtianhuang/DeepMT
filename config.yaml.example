# DeepMT 配置文件示例
# 复制此文件为 config.yaml 并填入您的配置

# LLM配置
llm:
  provider: "openai"  # openai, anthropic, local
  api_key: ""  # 请在此处填入您的API密钥，或设置环境变量 OPENAI_API_KEY
  model: "gpt-4"  # gpt-4, gpt-3.5-turbo, claude-3-opus等
  temperature: 0.7
  max_tokens: 2000

# MR生成配置
mr_generation:
  use_llm: true
  use_template_pool: true
  use_precheck: true
  use_sympy_proof: true
  use_auto_derivation: true

# 网络搜索配置
web_search:
  enabled: true
  sources:
    - "pytorch_docs"  # PyTorch官方文档
    - "github"  # GitHub仓库
    - "stackoverflow"  # Stack Overflow
    - "blogs"  # 技术博客
  max_results: 5  # 每个源的搜索结果数量
  timeout: 10  # 请求超时时间（秒）

# 日志配置
logging:
  level: "INFO"  # DEBUG, INFO, WARNING, ERROR
  file: "data/logs/deepmt.log"
