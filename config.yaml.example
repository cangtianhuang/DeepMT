# DeepMT 配置文件示例
# 复制此文件为 config.yaml 并填入您的配置

# LLM配置
llm:
  provider: "openai"  # openai, anthropic, local
  api_key: ""  # 请在此处填入您的API密钥，或设置环境变量 OPENAI_API_KEY
  model_base: "ernie-4.5-turbo-latest"  # 基础模型
  model_max: "ernie-5.0-thinking-latest"  # 高级模型
  url: "https://qianfan.baidubce.com/v2/"  # LLM API 基础URL（可选）
  temperature: 0.7
  max_tokens: 2000

# MR生成配置
mr_generation:
  sources:
    - llm  # LLM猜想（主要来源）
    - template  # 模板池（辅助来源）
  use_precheck: true  # 快速筛选
  use_sympy_proof: true  # SymPy验证

# 网络搜索配置
web_search:
  enabled: true
  sources:
    docs: true  # 框架官方文档
    github: true  # GitHub仓库
    web_search: true  # 网络搜索
  max_results: 5  # 每个源的搜索结果数量
  timeout: 10  # 请求超时时间（秒）
  custom_sites: []  # 用户指定的网站来源（可选）
  # API配置
  github_token: ""  # GitHub API token（可选）
  baidu_api_key: ""  # 百度智能云千帆API Key
  ocr: false  # 是否启用OCR（用于处理网页中的公式图片）

# 日志配置
logging:
  level: "INFO"  # DEBUG, INFO, WARNING, ERROR
  file: "data/logs/deepmt.log"
